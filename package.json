{
  "name": "esy-sdl2",
  "version": "2.0.10.",
  "description": "Esy-enabled SDL 2 buidl",
  "license": "MIT",
  "esy": {
    "build": [
        ["bash", "-c", "#{os == 'windows' ? 'SHELL=bash CC=x86_64-w64-mingw32-gcc WINDRES=x86_64-w64-mingw32-windres ./configure --prefix=$cur__install' : './configure --prefix=$cur__install'}"],
        ["make"],
        ["make", "install"]
    ],
    "buildsInSource":true,
    "exportedEnv": {
        "SDL2_INCLUDE_PATH": {
            "val": "#{self.install / 'include'}",
            "scope": "global"
        },
        "SDL2_LIB_PATH": {
            "val": "#{self.lib}",
            "scope": "global"
        }
    }
  },
  "dependencies": { }
}
