{
  "name": "esy-sdl2",
  "version": "2.0.10.",
  "description": "Esy-enabled SDL 2 buidl",
  "license": "MIT",
  "esy": {
    "build": [
        ["make", "clean"]
    ],
    "buildsInSource":"_build",
    "exportedEnv": {
        "SDL2_INCLUDE_PATH": {
            "val": "#{self.install / 'include'}",
            "scope": "global"
        },
        "SDL2_LIB_PATH": {
            "val": "#{self.lib}",
            "scope": "global"
        }
    }
  },
  "dependencies": { }
}
